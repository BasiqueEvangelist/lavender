<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.19.4/owo-ui.xsd">

    <templates>
        <template name="horizontal-rule">
            <flow-layout direction="vertical">
                <children>
                    <texture texture="lavender:textures/gui/book.png" texture-width="512" texture-height="256" u="54"
                             v="183"
                             region-width="109" region-height="3">
                        <blend>true</blend>
                    </texture>
                </children>

                <horizontal-alignment>center</horizontal-alignment>
                <sizing>
                    <horizontal method="fill">100</horizontal>
                </sizing>
            </flow-layout>
        </template>

        <template name="centered-button">
            <flow-layout direction="horizontal">
                <children>
                    <button>
                        <text>{{message}}</text>
                    </button>
                </children>
                <horizontal-alignment>center</horizontal-alignment>
                <sizing>
                    <horizontal method="fill">100</horizontal>
                </sizing>
            </flow-layout>
        </template>

        <template name="crafting-recipe">
            <flow-layout direction="horizontal">
                <children>
                    <flow-layout direction="vertical">
                        <children>
                            <texture texture="lavender:textures/gui/book.png" texture-width="512" texture-height="256"
                                     u="54" v="186" region-width="104" region-height="54">
                                <blend>true</blend>
                            </texture>

                            <grid-layout rows="3" columns="3" id="input-grid">
                                <children>
                                    <lavender.ingredient row="0" column="0">
                                        <margins>
                                            <top>1</top>
                                            <left>1</left>
                                        </margins>
                                    </lavender.ingredient>
                                    <lavender.ingredient row="0" column="1">
                                        <margins>
                                            <top>1</top>
                                            <left>1</left>
                                        </margins>
                                    </lavender.ingredient>
                                    <lavender.ingredient row="0" column="2">
                                        <margins>
                                            <top>1</top>
                                            <left>1</left>
                                        </margins>
                                    </lavender.ingredient>
                                    <lavender.ingredient row="1" column="0">
                                        <margins>
                                            <top>1</top>
                                            <left>1</left>
                                        </margins>
                                    </lavender.ingredient>
                                    <lavender.ingredient row="1" column="1">
                                        <margins>
                                            <top>1</top>
                                            <left>1</left>
                                        </margins>
                                    </lavender.ingredient>
                                    <lavender.ingredient row="1" column="2">
                                        <margins>
                                            <top>1</top>
                                            <left>1</left>
                                        </margins>
                                    </lavender.ingredient>
                                    <lavender.ingredient row="2" column="0">
                                        <margins>
                                            <top>1</top>
                                            <left>1</left>
                                        </margins>
                                    </lavender.ingredient>
                                    <lavender.ingredient row="2" column="1">
                                        <margins>
                                            <top>1</top>
                                            <left>1</left>
                                        </margins>
                                    </lavender.ingredient>
                                    <lavender.ingredient row="2" column="2">
                                        <margins>
                                            <top>1</top>
                                            <left>1</left>
                                        </margins>
                                    </lavender.ingredient>
                                </children>

                                <padding>
                                    <all>1</all>
                                    <right>2</right>
                                    <bottom>2</bottom>
                                </padding>

                                <positioning type="absolute">0,0</positioning>
                            </grid-layout>

                            <item id="output">
                                <set-tooltip-from-stack>true</set-tooltip-from-stack>
                                <positioning type="absolute">83,19</positioning>
                            </item>

                            <item>
                                <stack>minecraft:crafting_table</stack>
                                <set-tooltip-from-stack>true</set-tooltip-from-stack>
                                <positioning type="absolute">85,41</positioning>
                                <sizing>
                                    <horizontal method="fixed">12</horizontal>
                                    <vertical method="fixed">12</vertical>
                                </sizing>
                            </item>
                        </children>
                    </flow-layout>
                </children>

                <horizontal-alignment>center</horizontal-alignment>
                <vertical-alignment>center</vertical-alignment>

                <sizing>
                    <horizontal method="fill">100</horizontal>
                </sizing>
            </flow-layout>
        </template>

        <template name="structure-preview-base">
            <flow-layout direction="vertical">
                <children>
                    <flow-layout direction="horizontal">
                        <children>
                            <texture texture="lavender:textures/gui/book.png" texture-width="512" texture-height="256"
                                     u="267" v="0" region-width="100" region-height="100">
                                <blend>true</blend>
                                <positioning type="absolute">0,0</positioning>
                            </texture>

                            <lavender.structure structure-id="{{structure}}" id="structure">
                                <sizing>
                                    <horizontal method="fixed">100</horizontal>
                                    <vertical method="fixed">100</vertical>
                                </sizing>
                            </lavender.structure>

                            <template-child id="slider-anchor"/>
                        </children>

                        <vertical-alignment>center</vertical-alignment>
                    </flow-layout>
                </children>

                <horizontal-alignment>center</horizontal-alignment>

                <sizing>
                    <horizontal method="fill">100</horizontal>
                </sizing>
            </flow-layout>
        </template>

        <template name="structure-preview">
            <template name="structure-preview-base">
                <child id="slider-anchor">
                    <flow-layout direction="vertical"/>
                </child>
            </template>
        </template>

        <template name="structure-preview-with-layers">
            <template name="structure-preview-base">
                <child id="slider-anchor">
                    <flow-layout direction="vertical">
                        <children>
                            <texture texture="lavender:textures/gui/book.png" texture-width="512" texture-height="256"
                                     u="367" v="14" region-width="11" region-height="72">
                                <blend>true</blend>
                                <positioning type="absolute">0,0</positioning>
                            </texture>

                            <slim-slider direction="vertical" id="layer-slider">
                                <sizing>
                                    <vertical method="fixed">66</vertical>
                                </sizing>
                                <step-size>1</step-size>

                                <margins>
                                    <right>2</right>
                                    <vertical>3</vertical>
                                </margins>
                            </slim-slider>
                        </children>

                        <margins>
                            <left>-1</left>
                        </margins>
                    </flow-layout>
                </child>
            </template>
        </template>
    </templates>

</owo-ui>