<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.19.4/owo-ui.xsd">

    <templates>
        <template name="page-title">
            <flow-layout direction="vertical">
                <children>
                    <label>
                        <text>{{title}}</text>
                        <color>dark-gray</color>

                        <horizontal-text-alignment>center</horizontal-text-alignment>

                        <margins>
                            <top>2</top>
                        </margins>
                        <sizing>
                            <horizontal method="fill">100</horizontal>
                        </sizing>
                    </label>

                    <texture texture="{{book-texture}}" texture-width="512" texture-height="256" u="54"
                             v="180" region-width="109" region-height="3">
                        <blend>true</blend>
                        <margins>
                            <top>5</top>
                            <bottom>7</bottom>
                        </margins>
                    </texture>
                </children>

                <horizontal-alignment>center</horizontal-alignment>
                <sizing>
                    <horizontal method="fill">100</horizontal>
                </sizing>
            </flow-layout>
        </template>

        <template name="item-spotlight">
            <stack-layout>
                <children>
                    <texture texture="{{book-texture}}" texture-width="512" texture-height="256"
                             u="386" v="109" region-width="96" region-height="24">
                        <blend>true</blend>
                        <margins>
                            <top>5</top>
                            <bottom>7</bottom>
                        </margins>
                    </texture>

                    <item>
                        <stack>{{item}}</stack>
                        <set-tooltip-from-stack>true</set-tooltip-from-stack>
                        <margins>
                            <bottom>5</bottom>
                        </margins>
                    </item>
                </children>

                <horizontal-alignment>center</horizontal-alignment>
                <vertical-alignment>center</vertical-alignment>

                <sizing>
                    <horizontal method="fill">100</horizontal>
                </sizing>
            </stack-layout>
        </template>

        <template name="horizontal-rule">
            <flow-layout direction="vertical">
                <children>
                    <texture texture="{{book-texture}}" texture-width="512" texture-height="256"
                             u="54" v="183" region-width="109" region-height="3">
                        <blend>true</blend>
                    </texture>
                </children>

                <horizontal-alignment>center</horizontal-alignment>
                <sizing>
                    <horizontal method="fill">100</horizontal>
                </sizing>
            </flow-layout>
        </template>

        <template name="fit-image-background">
            <texture texture="{{book-texture}}" texture-width="512" texture-height="256"
                     u="385" v="0" region-width="106" region-height="106">
                <blend>true</blend>
            </texture>
        </template>

        <template name="centered-button">
            <flow-layout direction="horizontal">
                <children>
                    <button>
                        <text>{{message}}</text>
                    </button>
                </children>
                <horizontal-alignment>center</horizontal-alignment>
                <sizing>
                    <horizontal method="fill">100</horizontal>
                </sizing>
            </flow-layout>
        </template>

        <!-- Recipe templates: crafting,smelting,smithing,stonecutting -->

        <template name="crafting-recipe">
            <flow-layout direction="horizontal">
                <children>
                    <flow-layout direction="vertical">
                        <children>
                            <texture texture="{{book-texture}}" texture-width="512" texture-height="256"
                                     u="54" v="186" region-width="104" region-height="54">
                                <blend>true</blend>
                            </texture>

                            <grid-layout rows="3" columns="3" id="input-grid">
                                <children>
                                    <lavender.ingredient row="0" column="0">
                                        <margins>
                                            <top>1</top>
                                            <left>1</left>
                                        </margins>
                                    </lavender.ingredient>
                                    <lavender.ingredient row="0" column="1">
                                        <margins>
                                            <top>1</top>
                                            <left>1</left>
                                        </margins>
                                    </lavender.ingredient>
                                    <lavender.ingredient row="0" column="2">
                                        <margins>
                                            <top>1</top>
                                            <left>1</left>
                                        </margins>
                                    </lavender.ingredient>
                                    <lavender.ingredient row="1" column="0">
                                        <margins>
                                            <top>1</top>
                                            <left>1</left>
                                        </margins>
                                    </lavender.ingredient>
                                    <lavender.ingredient row="1" column="1">
                                        <margins>
                                            <top>1</top>
                                            <left>1</left>
                                        </margins>
                                    </lavender.ingredient>
                                    <lavender.ingredient row="1" column="2">
                                        <margins>
                                            <top>1</top>
                                            <left>1</left>
                                        </margins>
                                    </lavender.ingredient>
                                    <lavender.ingredient row="2" column="0">
                                        <margins>
                                            <top>1</top>
                                            <left>1</left>
                                        </margins>
                                    </lavender.ingredient>
                                    <lavender.ingredient row="2" column="1">
                                        <margins>
                                            <top>1</top>
                                            <left>1</left>
                                        </margins>
                                    </lavender.ingredient>
                                    <lavender.ingredient row="2" column="2">
                                        <margins>
                                            <top>1</top>
                                            <left>1</left>
                                        </margins>
                                    </lavender.ingredient>
                                </children>

                                <padding>
                                    <all>1</all>
                                    <right>2</right>
                                    <bottom>2</bottom>
                                </padding>

                                <positioning type="absolute">0,0</positioning>
                            </grid-layout>

                            <item id="output">
                                <set-tooltip-from-stack>true</set-tooltip-from-stack>
                                <positioning type="absolute">83,19</positioning>
                            </item>

                            <item>
                                <stack>minecraft:crafting_table</stack>
                                <set-tooltip-from-stack>true</set-tooltip-from-stack>
                                <positioning type="absolute">85,41</positioning>
                                <sizing>
                                    <horizontal method="fixed">12</horizontal>
                                    <vertical method="fixed">12</vertical>
                                </sizing>
                            </item>
                        </children>
                    </flow-layout>
                </children>

                <horizontal-alignment>center</horizontal-alignment>
                <vertical-alignment>center</vertical-alignment>

                <sizing>
                    <horizontal method="fill">100</horizontal>
                </sizing>
            </flow-layout>
        </template>

        <template name="smelting-recipe">
            <flow-layout direction="horizontal">
                <children>
                    <flow-layout direction="vertical">
                        <children>
                            <texture texture="{{book-texture}}" texture-width="512" texture-height="256"
                                     u="268" v="140" region-width="101" region-height="24">
                                <blend>true</blend>
                            </texture>

                            <lavender.ingredient id="input">
                                <positioning type="absolute">4,4</positioning>
                            </lavender.ingredient>

                            <item id="output">
                                <set-tooltip-from-stack>true</set-tooltip-from-stack>
                                <positioning type="absolute">81,4</positioning>
                            </item>

                            <item id="workstation">
                                <set-tooltip-from-stack>true</set-tooltip-from-stack>
                                <positioning type="absolute">39,15</positioning>
                                <sizing>
                                    <horizontal method="fixed">8</horizontal>
                                    <vertical method="fixed">8</vertical>
                                </sizing>
                            </item>
                        </children>
                    </flow-layout>
                </children>

                <horizontal-alignment>center</horizontal-alignment>
                <vertical-alignment>center</vertical-alignment>

                <sizing>
                    <horizontal method="fill">100</horizontal>
                </sizing>
            </flow-layout>
        </template>

        <template name="smithing-recipe">
            <flow-layout direction="horizontal">
                <children>
                    <flow-layout direction="vertical">
                        <children>
                            <texture texture="{{book-texture}}" texture-width="512" texture-height="256"
                                     u="268" v="166" region-width="101" region-height="24">
                                <blend>true</blend>
                            </texture>

                            <flow-layout direction="horizontal">
                                <children>
                                    <lavender.ingredient id="input-1"/>
                                    <lavender.ingredient id="input-2"/>
                                    <lavender.ingredient id="input-3"/>
                                </children>
                                <positioning type="absolute">2,4</positioning>
                                <gap>1</gap>
                            </flow-layout>

                            <item id="output">
                                <set-tooltip-from-stack>true</set-tooltip-from-stack>
                                <positioning type="absolute">81,4</positioning>
                            </item>

                            <item>
                                <stack>minecraft:smithing_table</stack>
                                <set-tooltip-from-stack>true</set-tooltip-from-stack>
                                <positioning type="absolute">58,15</positioning>
                                <sizing>
                                    <horizontal method="fixed">8</horizontal>
                                    <vertical method="fixed">8</vertical>
                                </sizing>
                            </item>
                        </children>
                    </flow-layout>
                </children>

                <horizontal-alignment>center</horizontal-alignment>
                <vertical-alignment>center</vertical-alignment>

                <sizing>
                    <horizontal method="fill">100</horizontal>
                </sizing>
            </flow-layout>
        </template>

        <template name="stonecutting-recipe">
            <flow-layout direction="horizontal">
                <children>
                    <flow-layout direction="vertical">
                        <children>
                            <texture texture="{{book-texture}}" texture-width="512" texture-height="256"
                                     u="268" v="192" region-width="101" region-height="24">
                                <blend>true</blend>
                            </texture>

                            <lavender.ingredient id="input">
                                <positioning type="absolute">4,4</positioning>
                            </lavender.ingredient>

                            <item id="output">
                                <set-tooltip-from-stack>true</set-tooltip-from-stack>
                                <positioning type="absolute">81,4</positioning>
                            </item>

                            <item>
                                <stack>minecraft:stonecutter</stack>
                                <set-tooltip-from-stack>true</set-tooltip-from-stack>
                                <positioning type="absolute">29,4</positioning>
                            </item>
                        </children>
                    </flow-layout>
                </children>

                <horizontal-alignment>center</horizontal-alignment>
                <vertical-alignment>center</vertical-alignment>

                <sizing>
                    <horizontal method="fill">100</horizontal>
                </sizing>
            </flow-layout>
        </template>

        <!-- Structure previews: base element, with/without slider -->

        <template name="structure-preview-base">
            <flow-layout direction="vertical">
                <children>
                    <flow-layout direction="horizontal">
                        <children>
                            <texture texture="{{book-texture}}" texture-width="512" texture-height="256"
                                     u="267" v="0" region-width="100" region-height="100">
                                <blend>true</blend>
                                <positioning type="absolute">0,0</positioning>
                            </texture>

                            <lavender.structure structure-id="{{structure}}" id="structure">
                                <sizing>
                                    <horizontal method="fixed">100</horizontal>
                                    <vertical method="fixed">100</vertical>
                                </sizing>
                            </lavender.structure>

                            <template-child id="slider-anchor"/>
                        </children>

                        <vertical-alignment>center</vertical-alignment>
                    </flow-layout>
                </children>

                <horizontal-alignment>center</horizontal-alignment>

                <sizing>
                    <horizontal method="fill">100</horizontal>
                </sizing>
            </flow-layout>
        </template>

        <template name="structure-preview">
            <template name="structure-preview-base">
                <child id="slider-anchor">
                    <flow-layout direction="vertical"/>
                </child>
            </template>
        </template>

        <template name="structure-preview-with-layers">
            <template name="structure-preview-base">
                <child id="slider-anchor">
                    <flow-layout direction="vertical">
                        <children>
                            <texture texture="{{book-texture}}" texture-width="512" texture-height="256"
                                     u="367" v="14" region-width="11" region-height="72">
                                <blend>true</blend>
                                <positioning type="absolute">0,0</positioning>
                            </texture>

                            <slim-slider direction="vertical" id="layer-slider">
                                <sizing>
                                    <vertical method="fixed">66</vertical>
                                </sizing>
                                <step-size>1</step-size>

                                <margins>
                                    <right>2</right>
                                    <vertical>3</vertical>
                                </margins>
                            </slim-slider>
                        </children>

                        <margins>
                            <left>-1</left>
                        </margins>
                    </flow-layout>
                </child>
            </template>
        </template>
    </templates>

</owo-ui>