<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.19.4/owo-ui.xsd">

    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical" id="primary-panel">
                    <children>
                        <texture texture="lavender:textures/gui/book.png" texture-width="512" texture-height="256"
                                 region-width="267" region-height="180"/>

                        <flow-layout direction="vertical" id="left-page-anchor">
                            <children/>
                            <positioning type="absolute">15,15</positioning>
                            <sizing>
                                <horizontal method="fixed">112</horizontal>
                                <vertical method="fixed">153</vertical>
                            </sizing>
                        </flow-layout>

                        <flow-layout direction="vertical" id="right-page-anchor">
                            <children/>
                            <positioning type="absolute">139,15</positioning>
                            <sizing>
                                <horizontal method="fixed">112</horizontal>
                                <vertical method="fixed">153</vertical>
                            </sizing>
                        </flow-layout>

                        <button id="previous-button">
                            <renderer>
                                <texture texture="lavender:textures/gui/book.png" u="0" v="180" texture-width="512"
                                         texture-height="256"/>
                            </renderer>

                            <sizing>
                                <horizontal method="fixed">18</horizontal>
                                <vertical method="fixed">10</vertical>
                            </sizing>

                            <positioning type="absolute">-3,174</positioning>
                        </button>

                        <button id="back-button">
                            <renderer>
                                <texture texture="lavender:textures/gui/book.png" u="18" v="180" texture-width="512"
                                         texture-height="256"/>
                            </renderer>

                            <sizing>
                                <horizontal method="fixed">18</horizontal>
                                <vertical method="fixed">10</vertical>
                            </sizing>

                            <positioning type="absolute">122,176</positioning>
                        </button>

                        <button id="next-button">
                            <renderer>
                                <texture texture="lavender:textures/gui/book.png" u="36" v="180" texture-width="512"
                                         texture-height="256"/>
                            </renderer>

                            <sizing>
                                <horizontal method="fixed">18</horizontal>
                                <vertical method="fixed">10</vertical>
                            </sizing>

                            <positioning type="absolute">252,174</positioning>
                        </button>

                        <scroll direction="horizontal" id="bookmark-scroll">
                            <flow-layout direction="horizontal" id="bookmark-panel">
                                <children/>
                                <gap>2</gap>
                            </flow-layout>

                            <positioning type="absolute">6,-14</positioning>
                            <sizing>
                                <horizontal method="fixed">255</horizontal>
                                <vertical method="fixed">14</vertical>
                            </sizing>

                            <scrollbar-thiccness>2</scrollbar-thiccness>
                        </scroll>
                    </children>

                    <allow-overflow>true</allow-overflow>

                    <padding>
                        <all>25</all>
                    </padding>
                </flow-layout>
            </children>

            <horizontal-alignment>center</horizontal-alignment>
            <vertical-alignment>center</vertical-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>

    <templates>
        <template name="empty-page-content">
            <texture texture="lavender:textures/gui/book.png" texture-width="512" texture-height="256" u="163" v="180"
                     region-width="9" region-height="11">
                <blend>true</blend>
                <positioning type="relative">50,50</positioning>
            </texture>
        </template>

        <template name="page-title-header">
            <flow-layout direction="vertical">
                <children>
                    <label id="title-label">
                        <text>{{page-title}}</text>
                        <color>dark-gray</color>

                        <horizontal-text-alignment>center</horizontal-text-alignment>

                        <margins>
                            <top>2</top>
                        </margins>
                        <sizing>
                            <horizontal method="fill">100</horizontal>
                        </sizing>
                    </label>

                    <texture texture="lavender:textures/gui/book.png" texture-width="512" texture-height="256" u="54"
                             v="180" region-width="109" region-height="3">
                        <blend>true</blend>
                        <margins>
                            <top>5</top>
                            <bottom>7</bottom>
                        </margins>
                    </texture>
                </children>

                <horizontal-alignment>center</horizontal-alignment>
                <sizing>
                    <horizontal method="fill">100</horizontal>
                </sizing>
            </flow-layout>
        </template>

        <template name="landing-page-header">
            <flow-layout direction="vertical">
                <children>
                    <texture texture="lavender:textures/gui/book.png" texture-width="512" texture-height="256" u="267"
                             v="100" region-width="100" region-height="29">
                        <blend>true</blend>
                    </texture>

                    <label id="title-label">
                        <text>{{page-title}}</text>
                        <color>dark-gray</color>
                        <horizontal-text-alignment>center</horizontal-text-alignment>

                        <positioning type="relative">50,50</positioning>
                        <margins>
                            <bottom>3</bottom>
                        </margins>

                        <sizing>
                            <horizontal method="fill">80</horizontal>
                        </sizing>
                    </label>
                </children>

                <horizontal-alignment>center</horizontal-alignment>

                <sizing>
                    <horizontal method="fill">100</horizontal>
                </sizing>

                <margins>
                    <bottom>7</bottom>
                </margins>
            </flow-layout>
        </template>

        <template name="index-item">
            <flow-layout direction="horizontal">
                <children>
                    <item id="icon">
                        <margins>
                            <vertical>1</vertical>
                            <left>2</left>
                            <right>4</right>
                        </margins>

                        <sizing>
                            <horizontal method="fixed">8</horizontal>
                            <vertical method="fixed">8</vertical>
                        </sizing>
                    </item>

                    <label id="index-label">
                        <color>black</color>
                        <cursor-style>hand</cursor-style>
                        <line-height>7</line-height>

                        <sizing>
                            <horizontal method="fill">85</horizontal>
                        </sizing>
                    </label>
                </children>

                <vertical-alignment>center</vertical-alignment>

                <sizing>
                    <horizontal method="fill">100</horizontal>
                </sizing>
            </flow-layout>
        </template>

        <template name="bookmark-button">
            <flow-layout direction="vertical">
                <children>
                    <template-child id="icon">
                        <z-index>10</z-index>

                        <positioning type="absolute">3,4</positioning>
                        <sizing>
                            <horizontal method="fixed">8</horizontal>
                            <vertical method="fixed">8</vertical>
                        </sizing>
                    </template-child>
                    <button id="bookmark-button">
                        <renderer>
                            <texture texture="lavender:textures/gui/book.png" u="0" v="210" texture-width="512"
                                     texture-height="256"/>
                        </renderer>

                        <sizing>
                            <horizontal method="fixed">14</horizontal>
                            <vertical method="fixed">14</vertical>
                        </sizing>
                    </button>
                </children>

                <margins>
                    <top>1</top>
                </margins>
            </flow-layout>
        </template>

        <template name="bookmark">
            <template name="bookmark-button">
                <child id="icon">
                    <item id="bookmark-preview"/>
                </child>
            </template>
        </template>

        <template name="add-bookmark">
            <template name="bookmark-button">
                <child id="icon">
                    <texture texture="lavender:textures/gui/book.png" texture-width="512" texture-height="256" u="14"
                             v="211" region-width="8" region-height="8">
                    </texture>
                </child>
            </template>
        </template>

        <template name="completion-bar">
            <flow-layout direction="vertical">
                <children>
                    <template name="horizontal-rule@lavender:book_components"/>
                    <flow-layout direction="vertical">
                        <children>
                            <label id="completion-label"/>
                            <flow-layout direction="vertical">
                                <children>
                                    <texture texture="lavender:textures/gui/book.png" texture-width="512" texture-height="256"
                                             u="268" v="129" region-width="100" region-height="5">
                                    </texture>
                                    <texture texture="lavender:textures/gui/book.png" texture-width="512" texture-height="256"
                                             u="268" v="134" region-width="100" region-height="5">

                                        <visible-area>
                                            <width>{{progress}}</width>
                                        </visible-area>

                                        <positioning type="absolute">0,0</positioning>
                                    </texture>
                                </children>
                            </flow-layout>
                        </children>

                        <margins>
                            <top>4</top>
                        </margins>
                    </flow-layout>
                </children>

                <horizontal-alignment>center</horizontal-alignment>

                <margins>
                    <bottom>3</bottom>
                </margins>
                <positioning type="relative">50,100</positioning>
            </flow-layout>
        </template>
    </templates>

</owo-ui>