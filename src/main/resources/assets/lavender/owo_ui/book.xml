<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.19.4/owo-ui.xsd">

    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical" id="primary-panel">
                    <children>
                        <texture texture="lavender:textures/gui/book.png" texture-width="512" texture-height="256"
                                 region-width="276" region-height="180"/>

                        <button id="previous-button">
                            <renderer>
                                <texture texture="lavender:textures/gui/book.png" u="18" v="180" texture-width="512" texture-height="256"/>
                            </renderer>

                            <sizing>
                                <horizontal method="fixed">18</horizontal>
                                <vertical method="fixed">10</vertical>
                            </sizing>

                            <positioning type="absolute">-3,174</positioning>
                        </button>

                        <button id="next-button">
                            <renderer>
                                <texture texture="lavender:textures/gui/book.png" u="0" v="180" texture-width="512" texture-height="256"/>
                            </renderer>

                            <sizing>
                                <horizontal method="fixed">18</horizontal>
                                <vertical method="fixed">10</vertical>
                            </sizing>

                            <positioning type="absolute">252,174</positioning>
                        </button>
                    </children>

                    <allow-overflow>true</allow-overflow>

                    <padding>
                        <all>25</all>
                    </padding>
                </flow-layout>
            </children>

            <horizontal-alignment>center</horizontal-alignment>
            <vertical-alignment>center</vertical-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>

    <templates>
        <template name="page-with-title">
            <flow-layout direction="vertical">
                <children>
                    <label id="title-label">
                        <text>{{page-title}}</text>
                        <color>dark-gray</color>

                        <horizontal-text-alignment>center</horizontal-text-alignment>
                        <sizing>
                            <horizontal method="fill">100</horizontal>
                        </sizing>
                    </label>

                    <texture texture="lavender:textures/gui/book.png" texture-width="512" texture-height="256" u="41" v="180" region-width="109" region-height="3">
                        <blend>true</blend>
                        <margins>
                            <top>5</top>
                            <bottom>7</bottom>
                        </margins>
                    </texture>

                    <flow-layout direction="vertical" id="page-content">
                        <children/>
                        <sizing>
                            <horizontal method="fill">100</horizontal>
                            <vertical method="fixed">123</vertical>
                        </sizing>
                    </flow-layout>
                </children>

                <positioning type="absolute">17,15</positioning>

                <sizing>
                    <horizontal method="fixed">108</horizontal>
                    <vertical method="fixed">153</vertical>
                </sizing>
            </flow-layout>
        </template>

        <template name="simple-page">
            <flow-layout direction="vertical">
                <children>
                    <flow-layout direction="vertical" id="page-content">
                        <children/>

                        <sizing>
                            <horizontal method="fill">100</horizontal>
                            <vertical method="fill">100</vertical>
                        </sizing>
                    </flow-layout>
                </children>

                <positioning type="absolute">141,15</positioning>
                <sizing>
                    <horizontal method="fixed">108</horizontal>
                    <vertical method="fixed">153</vertical>
                </sizing>
            </flow-layout>
        </template>

        <template name="horizontal-rule">
            <texture texture="lavender:textures/gui/book.png" texture-width="512" texture-height="256" u="41" v="183" region-width="109" region-height="3">
                <blend>true</blend>
            </texture>
        </template>
    </templates>

</owo-ui>